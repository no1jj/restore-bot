            transition: all 0.3s ease;
            box-sizing: border-box;
            appearance: none;
            -webkit-appearance: none;
            -moz-appearance: none;
        }

        .form-control:focus {
            outline: none;
            border-color: var(--heading-color);
            box-shadow: 0 0 0 2px rgba(97, 218, 251, 0.2);
        }

        .select-wrapper {
