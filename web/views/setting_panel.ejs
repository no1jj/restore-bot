        .category-item {
            padding: 12px 15px;
            cursor: pointer;
            display: flex;
            align-items: center;
            transition: background-color 0.2s;
            color: var(--text-color);
            text-decoration: none;
        }

        .category-item:hover {
            background-color: rgba(97, 218, 251, 0.1);
        }

        .category-item i {
            margin-right: 10px;
            width: 20px;
            text-align: center;
